{
  "compilerOptions": {
    "target": "es2017",                         
    "module": "ESNext",                                                 
    "moduleResolution": "Node10",           
    "allowJs": true,                                                   
    "outDir": "./dist",              
    "esModuleInterop": true,   
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                 
    "skipLibCheck": true                            
  },
  "exclude": ["node_modules"]
}
